        <label for="searchTerm">Search for a community:</label>
        <input type="text" id="searchTerm" name="searchTerm" class="form-control" value="@Model.SearchTerm" placeholder="Enter community name">
        <span asp-validation-for="SearchTerm" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Search</button>
</form>


















